{
  "app": {
    "name": "Terminal Assistant",
    "version": "1.0",
    "creator": "Claude & [Tu nombre aqu√≠]",
    "github": "https://github.com/[tu-usuario]/terminal-assistant"
  },
  "paths": {
    "config_dir": "$HOME/.terminal_assistant",
    "history_file": "$HOME/.terminal_assistant/history.log",
    "notes_file": "$HOME/.terminal_assistant/notas.txt",
    "projects_dir": "$HOME/Proyectos"
  },
  "styles": {
    "colors": {
      "blue": "\\033[0;34m",
      "green": "\\033[0;32m",
      "yellow": "\\033[1;33m",
      "red": "\\033[0;31m",
      "purple": "\\033[0;35m",
      "cyan": "\\033[0;36m",
      "white": "\\033[1;37m",
      "reset": "\\033[0m"
    },
    "formats": {
      "bold": "\\033[1m",
      "underline": "\\033[4m",
      "blink": "\\033[5m",
      "reverse": "\\033[7m"
    }
  },
  "banner": {
    "enabled": true,
    "art": [
      "  _______                  _             _                    _     _             _   ",
      " |__   __|                (_)           | |    /\\            (_)   | |           | |  ",
      "    | | ___ _ __ _ __ ___  _ _ __   __ _| |   /  \\   ___ ___  _ ___| |_ __ _ _ __ | |_ ",
      "    | |/ _ \\ '__| '_ \\` _ \\| | '_ \\ / _\\` | |  / /\\ \\ / __/ __|| / __| __/ _\\` | '_ \\| __|",
      "    | |  __/ |  | | | | | | | | | | (_| | | / ____ \\\\__ \\__ \\| \\__ \\ || (_| | | | | |_ ",
      "    |_|\\___|_|  |_| |_| |_|_|_| |_|\\__,_|_|/_/    \\_\\___/___/ |___/\\__\\__,_|_| |_|\\__|"
    ],
    "welcome_message": "Terminal Assistant v1.0 - Aprendizaje y ayuda interactiva para Linux",
    "help_hint": "Escribe 'ayuda' para ver los comandos disponibles o 'salir' para terminar."
  },
  "user_preferences": {
    "show_banner": true,
    "detailed_mode": true,
    "save_history": true,
    "max_history": 1000,
    "auto_update_check": true
  }
}
